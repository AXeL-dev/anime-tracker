{
  "name": "anime-tracker",
  "version": "1.3.2",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --aot --configuration production --sourceMap=false --outputHashing=none",
    "build:webapp": "ng run anime-tracker:build-webapp --configuration=production",
    "build:firefox": "npm run build && cd dist/anime-tracker/webextension && mv -f manifest.firefox.json manifest.json",
    "build:chrome": "npm run build && cd dist/anime-tracker/webextension && rm -f manifest.firefox.json",
    "package": "web-ext build --source-dir=dist/anime-tracker/webextension --artifacts-dir=. --overwrite-dest",
    "build:github": "npm run build:webapp -- --base-href \"/anime-tracker/\"",
    "deploy:github": "ngh --dir=dist/anime-tracker/webapp",
    "postinstall": "node ./postinstall.js",
    "sign": "node ./sign-addon.js",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^12.1.3",
    "@angular/common": "^12.1.3",
    "@angular/compiler": "^12.1.3",
    "@angular/core": "^12.1.3",
    "@angular/forms": "^12.1.3",
    "@angular/platform-browser": "^12.1.3",
    "@angular/platform-browser-dynamic": "^12.1.3",
    "@angular/router": "^12.1.3",
    "@blox/material": "^0.18.1",
    "material-icons": "^0.5.2",
    "ngx-infinite-scroll": "^10.0.1",
    "roboto-fontface": "^0.10.0",
    "rxjs": "~6.5.4",
    "sass-loader": "^9.0.3",
    "string-similarity": "^4.0.4",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "12.1.3",
    "@angular/cli": "^12.1.3",
    "@angular/compiler-cli": "^12.1.3",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.19.14",
    "@types/string-similarity": "^4.0.0",
    "codelyzer": "^6.0.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.14",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "protractor": "~7.0.0",
    "sign-addon": "^3.1.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.3.5",
    "web-ext": "^5.5.0",
    "web-ext-types": "^3.2.1",
    "webextension-polyfill": "^0.6.0"
  }
}

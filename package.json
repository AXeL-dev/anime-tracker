{
  "name": "anime-tracker",
  "version": "1.0.6",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --aot --prod --sourceMap=false --outputHashing=none",
    "build:webapp": "ng run anime-tracker:build-webapp --configuration=production",
    "build:firefox": "npm run build && cd dist/anime-tracker/webextension && mv -f manifest.firefox.json manifest.json",
    "build:chrome": "npm run build && cd dist/anime-tracker/webextension && rm -f manifest.firefox.json",
    "package": "web-ext build --source-dir=dist/anime-tracker/webextension --artifacts-dir=. --overwrite-dest",
    "build:github": "npm run build:webapp -- --base-href \"/anime-tracker/\"",
    "deploy:github": "ngh --dir=dist/anime-tracker/webapp",
    "preinstall": "npx npm-force-resolutions",
    "postinstall": "node ./postinstall.js",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^9.1.13",
    "@angular/common": "^9.1.13",
    "@angular/compiler": "^9.1.13",
    "@angular/core": "^9.1.13",
    "@angular/forms": "^9.1.13",
    "@angular/platform-browser": "^9.1.13",
    "@angular/platform-browser-dynamic": "^9.1.13",
    "@angular/router": "^9.1.13",
    "@blox/material": "^0.18.1",
    "material-icons": "^0.5.2",
    "ngx-infinite-scroll": "^10.0.1",
    "roboto-fontface": "^0.10.0",
    "rxjs": "~6.5.4",
    "tslib": "^1.14.1",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.901.7",
    "@angular/cli": "^9.1.13",
    "@angular/compiler-cli": "^9.1.13",
    "@types/jasmine": "^3.6.2",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.19.14",
    "codelyzer": "^5.1.2",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.0",
    "karma-jasmine": "~3.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "npm-force-resolutions": "0.0.3",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "tslint": "^6.1.3",
    "typescript": "~3.8.3",
    "web-ext-types": "^3.2.1",
    "webextension-polyfill": "^0.6.0"
  },
  "resolutions": {
    "sass-loader": "9.0.3"
  }
}

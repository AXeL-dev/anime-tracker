{
  "name": "anime-tracker",
  "version": "1.3.6",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --aot --configuration production --sourceMap=false --outputHashing=none",
    "build:webapp": "ng run anime-tracker:build-webapp --configuration=production",
    "build:firefox": "npm run build && cd dist/anime-tracker/webextension && mv -f manifest.firefox.json manifest.json",
    "build:chrome": "npm run build && cd dist/anime-tracker/webextension && rm -f manifest.firefox.json",
    "package": "web-ext build --source-dir=dist/anime-tracker/webextension --artifacts-dir=. --overwrite-dest",
    "build:github": "npm run build:webapp -- --base-href \"/anime-tracker/\"",
    "deploy:github": "ngh --dir=dist/anime-tracker/webapp",
    "postinstall": "node ./scripts/postinstall.js",
    "sign": "node ./scripts/sign-addon.js",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "release:major": "release-it major",
    "release:minor": "release-it minor",
    "release:patch": "release-it patch"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^13.2.3",
    "@angular/common": "^13.2.3",
    "@angular/compiler": "^13.2.3",
    "@angular/core": "^13.2.3",
    "@angular/forms": "^13.2.3",
    "@angular/platform-browser": "^13.2.3",
    "@angular/platform-browser-dynamic": "^13.2.3",
    "@angular/router": "^13.2.3",
    "@blox/material": "^0.18.1",
    "material-icons": "^1.10.7",
    "ngx-infinite-scroll": "^10.0.1",
    "roboto-fontface": "^0.10.0",
    "rxjs": "~7.5.4",
    "sass-loader": "^12.6.0",
    "string-similarity": "^4.0.4",
    "tslib": "^2.3.1",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^13.2.4",
    "@angular/cli": "^13.2.4",
    "@angular/compiler-cli": "^13.2.3",
    "@types/jasmine": "~3.10.3",
    "@types/jasminewd2": "~2.0.10",
    "@types/node": "^17.0.19",
    "@types/string-similarity": "^4.0.0",
    "codelyzer": "^6.0.2",
    "jasmine-core": "~4.0.0",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.3.16",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.3",
    "karma-jasmine": "~4.0.1",
    "karma-jasmine-html-reporter": "^1.7.0",
    "protractor": "~7.0.0",
    "release-it": "^14.12.5",
    "sign-addon": "^3.11.0",
    "ts-node": "~10.5.0",
    "tslint": "~6.1.0",
    "typescript": "^4.5.5",
    "web-ext": "^6.7.0",
    "web-ext-types": "^3.2.1",
    "webextension-polyfill": "^0.8.0"
  }
}
